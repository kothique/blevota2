@import './_mixins'
@import './_variables'

*
  prefix(box-sizing, border-box, webkit moz)
  font-family roboto,Tahoma,arial

body, html
  margin 0
  padding 0
  height 100%
  overflow-x hidden
  background-color background-color

#root
  min-height 100%
  position relative

#content
  padding-bottom footer-height
  z-index content-z

a
  text-decoration none
  cursor pointer

.page-container
  display block
  margin 16px auto
  margin-bottom 0

  @media xs
    width calc(100% - 16px * 2)

  @media sm
    max-width calc(576px - 16px * 2)

  @media md
    max-width calc(768px - 16px * 2)

  @media lg
    max-width calc(992px - 16px * 2)

  @media xl
    max-width calc(1200px - 16px * 2)

.modal-shadow
  box-shadow modal-box-shadow

.xs, .sm, .md, .lg, .xl
  display none

@media xs
  .xs
    display initial !important

@media sm
  .sm
    display initial !important

@media md
  .md
    display initial !important

@media lg
  .lg
    display initial !important

@media xl
  .xl
    display initial !important