@import './_mixins'
@import './_variables'

*
  prefix(box-sizing, border-box, webkit moz)
  font-family roboto,Tahoma,arial

body, html
  margin 0
  padding 0
  height 100%
  overflow-x hidden
  background-color background-color

#root
  min-height 100%
  position relative

#content
  padding-bottom footer-height
  z-index content-z

a
  text-decoration none
  cursor pointer

.page-container
  display block
  margin 16px auto

  @media xs
    width 100%

  @media sm
    max-width 576px

  @media md
    max-width 768px

  @media lg
    max-width 992px

  @media xl
    max-width 1200px

.text-field
  width 100%
  height 27px
  color rgba(0, 0, 0, 0.6)
  border none
  display block
  min-height 24px
  line-height 135%
  font-size 20px
  margin 0
  overflow-x hidden
  overflow-y visible
  border-bottom 1px solid text-field-outline-color
  padding-bottom 2px
  margin-bottom 12px

.button
  border none
  background white
  box-shadow 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2)
  height 32px
  border-radius 5px
  color rgba(0, 0, 0, 0.6)
  z-index 0
  position relative
  text-align center

  &[disabled]
    color rgba(0, 0, 0, 0.2)

.button-group
  box-shadow 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2)
  border-radius 5px
  display flex

  .button
    box-shadow none
    border-radius 0
    flex 1

    &:not(:last-child)
      border-right 1px solid rgba(0, 0, 0, 0.1)

    &:first-child
      border-top-left-radius 5px
      border-bottom-left-radius 5px

    &:last-child
      border-top-right-radius 5px
      border-bottom-right-radius 5px

.modal-shadow
  box-shadow 0 0 2px rgba(0, 0, 0, .12), 0 2px 4px rgba(0, 0, 0, .24)

.xs, .sm, .md, .lg, .xl
  display none

@media xs
  .xs
    display initial !important

@media sm
  .sm
    display initial !important

@media md
  .md
    display initial !important

@media lg
  .lg
    display initial !important

@media xl
  .xl
    display initial !important