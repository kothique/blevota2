@import './_variables'

#hud
  z-index hud-z
  position fixed
  left 0
  top 0
  width 100%
  height 100%

#hud-quit
  position fixed
  top 4px
  right 0
  width quit-button-size
  height quit-button-size
  cursor pointer

#hud-chat
  position fixed
  height hud-height
  right 0
  bottom 0
  left "calc(50% + %s / 2 + 2px + %s)" % (hud-height hud-height)
  overflow hidden
  overflow-y scroll
  padding 4px
  font-family monospace

#hud-orb
  height hud-height
  width @height
  position fixed
  left "calc(50% - %s / 2)" % @width
  bottom 4px

#hud-skill-bar-left
  height hud-height
  width @height
  position fixed
  right "calc(50% + %s / 2 + 2px)" % hud-height
  bottom 4px
  padding 2px
  
#hud-skill-bar-right
  height hud-height
  width @height
  position fixed
  left "calc(50% + %s / 2 + 2px)" % hud-height
  bottom 4px
  padding 2px