@import './_variables'

.text-field
  width 100%
  height 27px
  color alpha(gray, 0.7)
  border none
  display block
  min-height 24px
  line-height 135%
  font-size 16px
  margin 0
  overflow-x hidden
  overflow-y visible
  border-bottom 1px solid text-field-outline-text-color
  padding 2px
  margin-bottom 12px