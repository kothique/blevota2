@import './_variables'

.skill-icon
  border 1px solid skill-icon-border-color
  width skill-icon-size
  height skill-icon-size
  margin-left 8px
  position relative
  float left
  display inline-block

  &.active
    border-width 3px

.si-time
  display none
  text-align center
  position absolute
  left 0
  width skill-icon-size

  .cooldown &
    display initial

.si-img
  position absolute
  left 0
  top 0
  width skill-icon-size
  height skill-icon-size

.si-panel
  display none
  position absolute
  background-color alpha(black, 0.1)

  .no-mana &
  .cooldown &
    display initial

.si-shortcut
  display inline-block
  height skill-icon-size / 5
  width skill-icon-size / 5
  text-align center
  position absolute
  right 0
  bottom 0
  padding-right 0.2rem
  padding-bottom 0.1rem
  padding-left 0.2rem
  for side in top left
    border-{side} 1px solid skill-icon-border-color
  color white