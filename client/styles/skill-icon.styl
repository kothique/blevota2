@import './_variables'

.skill-icon
  border 1px solid skill-icon-border-color
  width skill-icon-size
  height skill-icon-size
  margin 2px
  block inline-block
  float left

  &.active
    border-width 3px

.si-time
  display none
  text-align center
  position absolute
  left 0
  width skill-icon-size

  .cooldown &
    display initial

.si-img
  position absolute
  left 0
  top 0
  width skill-icon-size
  height skill-icon-size

.si-panel
  display none
  position absolute
  background-color alpha(black, 0.1)

  .no-mana &
  .cooldown &
    display initial