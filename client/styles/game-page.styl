@import './_variables'

#gp-access-error
  text-align center
  position fixed
  top "calc(50% - 10px)" % ()
  left 0
  right 0

  a
    color red

#gp-game
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  background-image url('/images/bg.png')
  background-repeat repeat

.gp-bar
  background-color black
  position fixed
  z-index bar-z

#gp-bar-top
  top 0
  left 0
  right 0

#gp-bar-bottom
  bottom 0
  left 0
  right 0

#gp-bar-left
  left 0
  top 0
  bottom 0

#gp-bar-right
  right 0
  top 0
  bottom 0