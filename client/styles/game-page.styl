@import './_variables'

#gp-access-error
  text-align center
  position fixed
  top "calc(50% - 10px)" % ()
  left 0
  right 0

  a
    color red

#gp-game
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden

#gp-quit
  position fixed
  top 4px
  right 0
  width quit-button-size
  height quit-button-size
  cursor pointer

#gp-chat
  position fixed
  height hud-height
  right 0
  bottom 0
  left "calc(50% + %s / 2 + 2px + %s)" % (hud-height hud-height)
  overflow hidden
  overflow-y scroll
  padding 4px
  font-family monospace

#gp-orb
  height hud-height
  width @height
  position fixed
  left "calc(50% - %s / 2)" % @width
  bottom 4px

#gp-skill-bar-left
  height hud-height
  width @height
  position fixed
  right "calc(50% + %s / 2 + 2px)" % hud-height
  bottom 4px
  padding 2px
  
#gp-skill-bar-right
  height hud-height
  width @height
  position fixed
  left "calc(50% + %s / 2 + 2px)" % hud-height
  bottom 4px
  padding 2px