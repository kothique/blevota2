@import './_variables'

.check-button
  cursor pointer
  border none
  background white
  box-shadow 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.12),0 1px 5px 0 rgba(0,0,0,0.2)
  height 32px
  border-radius 5px
  color rgba(0, 0, 0, 0.6)
  z-index 0
  position relative
  text-align center

  &[disabled]
    color rgba(0, 0, 0, 0.2)

  &.checked
    background alpha(gray, 0.3)